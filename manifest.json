{
    "manifest_version": 3,
    "name": "Humble Bundle Helper",
    "version": "0.6.0", 
    "description": "Displays information about the current Humble Bundle page and allows downloading.",
    "permissions": [
      "activeTab",  
      "scripting",  
      "downloads"   
    ],
    "host_permissions": [
      "https://www.humblebundle.com/*",
      "https://cdn.humblebundle.com/*"  
    ],
    "action": {
      "default_popup": "popup.html" 
    }
  }